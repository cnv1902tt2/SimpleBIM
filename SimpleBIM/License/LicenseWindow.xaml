<Window x:Class="SimpleBIM.License.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleBIM License Activation"
        Width="400"
        MinHeight="453"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="ToolWindow" Height="465">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo/Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="🔒" FontSize="48" HorizontalAlignment="Center"/>
            <TextBlock Text="SimpleBIM" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock Text="License Activation" FontSize="14" 
                       Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Status Message -->
        <Border Grid.Row="1" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                BorderThickness="1" CornerRadius="3" Padding="10,8" Margin="0,0,0,15">
            <TextBlock x:Name="StatusMessage" Text="Chức năng của add in hiện không khả dụng"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        Foreground="#FFD9534F"
                        FontWeight="SemiBold"/>          
        </Border>

        <!-- Contact Info -->
        <TextBlock Grid.Row="2" Text="Liên hệ với tác giả: Phan Huy Thiện để nhận key bản quyền" 
                   TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Số điện thoại: +84915898877" HorizontalAlignment="Center"/>
            <TextBlock Text="Email: example@gmail.com" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- License Key Input -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Nhập License Key:" Margin="0,0,0,5"/>
            <TextBox x:Name="LicenseKeyTextBox" Height="25" FontSize="14"
                     VerticalContentAlignment="Center" Padding="8,0">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </StackPanel>

        <!-- License Info (khi có license) -->
        <Border x:Name="LicenseInfoBorder" Grid.Row="5" Background="#FFF8F9FA" 
                BorderBrush="#FFDEE2E6" BorderThickness="1" CornerRadius="3" 
                Padding="10" Margin="0,0,0,15" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="LicenseStatusText" Text="Active" 
                           Foreground="#28A745" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="ExpiryDateText" Text="Expires: 31/12/2024" 
                           Foreground="#6C757D" FontSize="12"/>
                <TextBlock x:Name="MachineText" Text="Machine: My-PC" 
                           Foreground="#6C757D" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Connection Status -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,0,0,15">
            <Ellipse x:Name="ConnectionIndicator" Width="10" Height="10" 
                     Fill="#FFDC3545" Margin="0,0,5,0"/>
            <TextBlock x:Name="ConnectionStatusText" Text="Offline"/>
        </StackPanel>

        <!-- Spacer -->
        <Border Grid.Row="6" Margin="0,18,0,2"/>

        <!-- Buttons -->
        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ValidateButton" Content="Validate Key" 
                    Grid.Column="0" Height="35" FontWeight="Bold"
                    Background="#007BFF" Foreground="White" 
                    BorderBrush="#0069D9" Margin="0,-13,5,13"
                    Click="ValidateButton_Click"/>

            <Button x:Name="ClearButton" Content="Clear License" 
                    Grid.Column="1" Height="35"
                    Background="#6C757D" Foreground="White" 
                    BorderBrush="#5A6268" Margin="5,-13,5,13"
                    Click="ClearButton_Click"/>

            <Button x:Name="CloseButton" Content="Close" 
                    Grid.Column="2" Height="35"
                    Background="Transparent" Foreground="#6C757D" 
                    BorderBrush="#6C757D" BorderThickness="1" Margin="5,-13,0,13"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>